@model IEnumerable<KTStore.Models.Category>

@{

    ViewData["Title"] = "Index";
}

<div class="card p-4">
    <h3>Categories List</h3>
    <br />
    <p>@TempData["Message"]</p>
    <p>
        <a class="btn btn-success btn-sm float-end" asp-area="Admin" asp-controller="Category" asp-action="Create">Create New Category</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>

                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/category/@(String.IsNullOrEmpty(item.Image)?"empty.jpg":item.Image)" class="rounded" width="60px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" data-val="true" value="true" checked="@item.Status" disabled>
                        </div>
                    </td>
                    <td class="px-2">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id=" @item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
