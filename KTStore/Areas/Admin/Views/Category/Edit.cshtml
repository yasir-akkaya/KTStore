@model KTStore.Models.Category

@{
    ViewData["Title"] = "Edit";
}
<div class="card p-4">


<h3>Edit Category - @Model.Name</h4>
<p>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-primary btn-sm float-end"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
</p>

<hr />
<div class="row">
    <div class="col-md-5">
        <img src="~/images/category/@(String.IsNullOrEmpty(Model.Image)?"empty.jpg":Model.Image)" width="100%" />
    </div>
    <div class="col-md-7">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="hidden" />
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-check form-switch mb-3 mt-3">
                <label for="IsStatus">Status</label>
                <input class="form-check-input" type="checkbox" role="switch" asp-for="Status" data-val="true" value="true">
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <label class="text-warning">@TempData["Message"]</label>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>